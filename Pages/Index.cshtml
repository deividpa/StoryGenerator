@page
@model IndexModel
@{
    ViewData["Title"] = "Generador de Historias";
}

<div class="text-center">
    <h1 class="display-4">Generador de Historias Aleatorias</h1>
    <p>Selecciona un género y genera una historia única.</p>

    <form method="post">
        <div class="form-group">
            <label for="genero">Género:</label>
            <select asp-for="GeneroSeleccionado" asp-items="Model.Generos" class="form-control">
                <option value="">-- Selecciona un género --</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Generar Historia</button>
    </form>

    @if (Model.HistoriaGenerada != null)
    {
        <div class="mt-4">
            <h3>Tu Historia Generada:</h3>
            <p>
                En una historia de @Model.HistoriaGenerada.Genero, @Model.HistoriaGenerada.Protagonista
                @Model.HistoriaGenerada.Escenario @Model.HistoriaGenerada.Conflicto.
                Al final, logra su objetivo @Model.HistoriaGenerada.Resolucion.
            </p>
        </div>
    }
</div>